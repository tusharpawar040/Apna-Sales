<%=layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-1">

    <form method="POST" action="/posts/<%=post._id%>?_method=PUT" novalidate class="offset-5 needs-validation">
        
        <h2 class="bg-info text-white text-center">Edit The Sale</h2>
        <div class="mb-3 color">
            <label for="productName" class="form-label">ProductName</label>
            <input type="text" name="post[productName] required" class="form-control" id="productName" placeholder="Edit ProductName" value="<%=post.productName%>">
            <div class="valid-feedback">ProductName looks good!</div>
            <div class="invalid-feedback">Please enter a ProductName</div>
        </div>

        <div class="mb-3">
            <label for="description">Description</label>
            <textarea name="post[description]" required class="form-control" id="description" placeholder="Edit description"><%=post.description%></textarea>
            <div class="valid-feedback">Description looks good!</div>
            <div class="invalid-feedback">Please enter a Description</div>
        </div>

        <div class="mb-3">
            <label for="shopName">ShopName</label>
            <input type="text" name="post[shopName]" required class="form-control" id="shopName" placeholder="Edit shopName" value="<%=post.shopName%>">    
            <div class="valid-feedback">ShopName looks good!</div>
            <div class="invalid-feedback">Please enter a ShopName</div>
        </div>

        <div class="mb-3">
            <label for="image">Original Post Image</label>
            <img src="<%=originalImageUrl%>" alt="" class="h-50 w-50">
        </div>

        <div class="mb-3">
            <label for="originalPrice">OriginalPrice</label>
            <input type="number" name="post[originalPrice]" required class="form-control" id="originalPrice" placeholder="Edit originalPrice" value="<%=post.originalPrice%>">    
            <!-- <div class="valid-feedback">ShopName looks good!</div> -->
            <div class="invalid-feedback">Please enter a OriginalPrice</div>
        </div>

        <div class="mb-3">
            <label for="price">Price</label>
            <input type="number" name="post[price]" required class="form-control" id="price" placeholder="Edit price" value="<%=post.price%>">    
            <!-- <div class="valid-feedback">ShopName looks good!</div> -->
            <div class="invalid-feedback">Please enter a price</div>
        </div>
        
        <div class="mb-3">
            <label for="location">Location</label>
            <input type="text" name="post[location]" required class="form-control" id="location" placeholder="Edit location" value="<%=post.location%>">    
            <!-- <div class="valid-feedback">Location looks good!</div> -->
            <div class="invalid-feedback">Please enter a Location</div>
        </div>

        <button class="btn btn-dark offset-3 mb-5 text-center w-50">EDIT</button>

    </form>
    <!-- <script src="/js/script.js"></script> -->
</div>
</div>
